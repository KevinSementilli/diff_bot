<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <xacro:property name="scale_factor" value="0.001 0.001 0.001"/>

    <!-- ****************************************************************************************** -->
    <!-- *************************************** Wrist ******************************************** -->
    <!-- ****************************************************************************************** -->
    
    <link name="world"/>

    <link name="forearm">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://diff_bot/meshes/forearm.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://diff_bot/meshes/forearm.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="world"/>
        <child link="forearm"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="wrist_carrier">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://diff_bot/meshes/wrist_carrier.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://diff_bot/meshes/wrist_carrier.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <joint name="wrist_carrier_joint" type="revolute">
        <parent link="forearm"/>
        <child link="wrist_carrier"/>
        <origin xyz="0 0 0.256" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-${3*pi/4}" upper="${3*pi/4}" effort="100" velocity="1"/>
    </joint>

    <link name="wrist_bevel">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <mesh filename="package://diff_bot/meshes/wrist_bevel.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://diff_bot/meshes/wrist_bevel.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <joint name="wrist_bevel_joint" type="revolute">
        <parent link="wrist_carrier"/>
        <child link="wrist_bevel"/>
        <origin xyz="0 0 0.0399" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${pi}" upper="${pi}" effort="100" velocity="1"/>
    </joint>
    
</robot>